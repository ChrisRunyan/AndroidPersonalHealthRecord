<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/title_home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/but_1"
        android:text="Blood Pressure - 6:30 AM, 9/15/2018"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/but_2"
        app:layout_constraintTop_toBottomOf="@+id/but_1"
        android:text="Blood Glucose - 6:34 AM, 9/15/2018"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/but_3"
        app:layout_constraintTop_toBottomOf="@+id/but_2"
        android:text="Blood Glucose - 8:07 AM, 9/15/2018"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/but_4"
        app:layout_constraintTop_toBottomOf="@+id/but_3"
        android:text="Blood Glucose - 11:00 AM, 9/15/2018"/>

    <include layout="@layout/floating_add_button" />
    <include layout="@layout/bottom_navigation" />

</android.support.constraint.ConstraintLayout>